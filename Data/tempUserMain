# main
if __name__ == "__main__":

    cmd = sys.argv[1]
    if cmd == "addUser" and len(sys.argv) == 6:
        name = sys.argv[2]
        username = sys.argv[3]
        password = sys.argv[4]
        email = sys.argv[5]
        
        addUserInfo(name, email, username, password)

    elif cmd == "prefs" and len(sys.argv) == 8:
        uid = int(sys.argv[2])
        qual = float(sys.argv[3])
        price = float(sys.argv[4])
        quant = float(sys.argv[5])
        size = sys.argv[6]
        diet = sys.argv[7]
        updatePreferences(uid, qual, price, quant, size, diet)

    elif cmd == "updateName" and len(sys.argv) == 4:
        uid = int(sys.argv[2])
        new_name = sys.argv[3]
        updateUserName(uid, new_name)

    elif cmd == "updateEmail" and len(sys.argv) == 4:
        uid = int(sys.argv[2])
        new_email = sys.argv[3]
        updateUserEmail(uid, new_email)

    elif cmd == "updatePassword" and len(sys.argv) == 4:
        uid = int(sys.argv[2])
        new_password = sys.argv[3]
        updateUserPassword(uid, new_password)

    elif cmd == "login" and len(sys.argv) == 4:
        username = sys.argv[2]
        password = sys.argv[3]
        userLogin(username, password)

    elif cmd == "store" and len(sys.argv) >= 4:
        uid = int(sys.argv[2])
        storeIDs = [int(arg) if arg.lower() != "none" else None for arg in sys.argv[3:8]]
        userStores(uid, storeIDs)

    else:
        print("Invalid command or arguments.")



import sys
import os

# Get the absolute path to the Data directory
BASE_DIR = os.path.dirname(os.path.abspath(__file__))
DATA_PATH = os.path.abspath(os.path.join(BASE_DIR, '..', 'Data'))

# Add Data directory to sys.path
sys.path.append(DATA_PATH)

# Now import the module
import userFunctions